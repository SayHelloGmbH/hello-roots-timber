{% if posts | length %}
	<div class="c-postlist__entries c-postlist__entries--{{ posts.0.type }}">
		{% for post in posts %}
			{% include [
				'partials/excerpt-' ~ post.type ~ '.twig',
				'partials/singular-' ~ post.type ~ '.twig',
				'partials/singular.twig'
			] %}
		{% endfor %}
	</div>
{% endif %}
